pipeline {
    agent any
    stages {

        stage('Build and push images') {
            steps { 
                sh "docker-compose up -d"
                sh "docker login -u sibel97 -p password1234"
                sh "docker-compose push"
            } 
        }
        stage('Deploy') {
            steps {
                sh "scp -i ~/.ssh/ansible_id_rsa docker-compose.yaml ansible1:/home/jenkins/docker-compose.yaml"
                sh "scp -i ~/.ssh/ansible_id_rsa nginx.conf ansible1:/home/jenkins/nginx.conf"
                sh "ansible-playbook -i configuration/inventory.yaml configuration/playbook.yaml"
            }
        }
    }
}